<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/container"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:orientation="vertical"    tools:context="com.example.inventoryapp.CameraActivity"    tools:ignore="MergeRootFrame" >    <com.example.inventoryapp.DrawableSurfaceView        android:id="@+id/surfaceview"        android:layout_width="fill_parent"        android:layout_height="0dp"        android:layout_weight="100"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <Button            android:id="@+id/capture_image"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="0.20"            android:onClick="capture"            android:text="@string/capture" />        <TextView            android:id="@+id/capture_number"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="0.20"            android:text="0"             />        <TextView            android:id="@+id/capture_number_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="0.40"            android:text="@string/nof_captured_images" />        <Button            android:id="@+id/capture_stop"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_weight="0.20"            android:onClick="stop"            android:text="@string/capture_done" />    </LinearLayout></LinearLayout>